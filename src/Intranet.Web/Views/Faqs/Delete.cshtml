@model FaqViewModel

@{
    ViewData["Title"] = $"Delete {Model.Question}";
}

<h2>Delete FAQ</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <h3>
        @Model.Category.Title
    </h3>
    <ul class="collapsible">
        <li id="@Html.DisplayFor(modelItem => modelItem.Url)">
            <div class="collapsible-header valign-wrapper active">
                <i class="material-icons">question_answer</i>
                <span>
                    @Html.DisplayFor(modelItem => modelItem.Question)
                </span>
            </div>
            <div class="collapsible-body">
                <span>
                    @Html.DisplayFor(modelItem => modelItem.Answer)
                </span>
            </div>
        </li>
    </ul>
</div>
    
<form asp-action="Delete">
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn" /> |
        <a asp-action="Index" class="btn">Cancel</a>
    </div>
</form>
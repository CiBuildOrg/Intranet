@model NewsViewModel

@{
    ViewData["Title"] = "Edit News";
    Layout = "_Layout";
}

<h2>Edit News</h2>

<div class="row">
    <form enctype="multipart/form-data" asp-action="Edit" class="col s12">
        <div class="row">
            @Html.Partial("_NewsForm", Model)
            <div class="input-field">
                <input type="submit" value="Save" class="btn" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

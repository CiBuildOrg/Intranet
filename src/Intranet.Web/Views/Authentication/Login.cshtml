@{
    Layout = null;
    var returnUrl = $"/Login?ReturnUrl={ViewBag.ReturnUrl}";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Certaincy Intranet</title>
    <base href="/" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-page">
        <div class="form">
            <h1>Certaincy</h1>
            <form class="login-form" action="@returnUrl" method="post">
                <input type="text" name="username" placeholder="username" />
                <input type="password" name="password" placeholder="password" />
                @{ Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateEntry loginError; }
                @if (ViewContext.ModelState.TryGetValue("Login", out loginError))
                {
                    <p style="color:red;font-weight:bold;">
                        @loginError.Errors.SingleOrDefault().ErrorMessage
                    </p>
                }
                <button>login</button>
            </form>
        </div>
    </div>
</body>
</html>